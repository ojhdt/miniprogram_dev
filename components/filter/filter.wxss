@import "../common/common.wxss";
@import "../common/reset.wxss";

.container {
  width: 100%;
  position: relative;
}

.category {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: row;
  color: #999;
  background-color: white;
  z-index: 2;
}

.category_item {
  width: 25%;
  height: 52rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #FFCD71;
  font-size: 32rpx;
}

.category_item_selected{
  background-color: #FFCD71;
  color: white;
}

.shadow {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: -2;
  transition: all .2s ease-in-out;
}

.dialog {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all .5s ease-in-out;
  position: absolute;
  width: 100%;
  background-color: white;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  z-index: -1;
}

.display {
  display: flex;
  width: 100%;
  height: 400rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-top: 30rpx;
}

.column {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item {
  width: 250rpx;
  height: 60rpx;
  overflow: hidden;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  transition: all .2s ease-in-out;
  flex-shrink: 0;
  flex-grow: 0;
}

.item_selected{
  background-color: #fff1d6;
  color: #ffb52b;
  font-weight: 600;
}

.confirm_btn {
  width: 250rpx;
  height: 60rpx;
  background-color: #ED8B2F;
  margin: 20rpx;
  /* height: 65rpx;
  width: 180rpx; */
  border-radius: 45rpx;
  font-size: 28rpx;
  color: white;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 5rpx;
}

.confirm_btn:active {
  background-color: #dd6f0e;
  color: rgb(233, 233, 233);
}