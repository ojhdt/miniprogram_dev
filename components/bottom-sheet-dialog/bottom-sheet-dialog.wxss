@import "../common/common.wxss";
@import "../common/reset.wxss";
@import "../common/icon.wxss";

.shadow {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: -2;
  transition: all .2s ease-in-out;
}

.container{
  width: 100%;
  position: absolute;
  bottom: 0;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  background-color: white;
  transition: all .4s ease-in-out;
}

.t_hover {
  background: var(--rgbaprimaryColor--);
}

.c_hover {
  opacity: .9;
}

.list {
  padding: 40px 0 0 0;
  max-width: 400px;
}

.list_item {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  height: 40px;
  /* transition: box-shadow .2s ease-in-out; */
  /* background: #f1f1f1; */
}

.list_item_left {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.list_item input {
  margin-left: 10px;
  width: 70%;
}

.list_add_item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0 50px;
  margin: 0 0 60px 0;
  transition: background .2s ease-in-out;
  color: #666;
}
.content_btn_l {
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
  width: 80px;
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  transition: background .2s ease-in-out, color .2s ease-in-out;
  color: #666;
}

.content_btn_r {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  width: 80px;
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  transition: opacity .2s ease-in-out, background .2s ease-in-out;
  border-radius: 5px;
  background: var(--primaryColor--);
}

.content_btn_r_disabled{
  background: #e0e0e0;
  color: #666;
}